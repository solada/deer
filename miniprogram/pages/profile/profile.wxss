/* pages/profile/profile.wxss */

.container {
  padding-bottom: 100rpx;
}

/* 用户信息卡片 */
.user-info {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #1AAD19;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 600;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-weight: 600;
  margin-bottom: 12rpx;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-item {
  padding: 30rpx 40rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-item:active {
  background-color: #f8f8f8;
}

.menu-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-title {
  font-weight: 500;
}

.menu-arrow {
  color: #cccccc;
  font-size: 32rpx;
}

/* 应用信息 */
.app-info {
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
}

.info-title {
  font-weight: 600;
  margin-bottom: 24rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

/* 退出登录 */
.logout-section {
  padding: 0 20rpx;
}

/* 未登录状态 */
.login-prompt {
  height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-actions {
  margin-top: 40rpx;
  width: 200rpx;
}
