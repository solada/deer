/* pages/register/register.wxss */

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #1AAD19 0%, #16a085 100%);
}

.register-form {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.form-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.form-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.form-subtitle {
  font-size: 28rpx;
  color: #666666;
  display: block;
}

.form-body {
  margin-bottom: 40rpx;
}

.form-group {
  position: relative;
  margin-bottom: 30rpx;
}

.input-tip {
  display: block;
  margin-top: 8rpx;
  margin-left: 24rpx;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
  padding: 10rpx;
}

.form-footer {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}
