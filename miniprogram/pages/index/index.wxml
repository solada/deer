<!-- pages/index/index.wxml -->
<view class="container">
  <!-- 顶部提示 -->
  <view class="top-tips" wx:if="{{!isLoggedIn}}">
    <text class="text-muted text-sm">请先登录以获得完整功能</text>
    <text class="text-primary text-sm ml-20" bindtap="goToLogin">去登录</text>
  </view>

  <!-- 帖子列表 -->
  <view class="post-list">
    <view class="post-item card" wx:for="{{posts}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}">
      <view class="post-header">
        <view class="author-info">
          <view class="avatar avatar-sm">
            {{item.nickname ? item.nickname.charAt(0) : item.username.charAt(0)}}
          </view>
          <view class="author-details">
            <text class="author-name text-base">{{item.nickname || item.username}}</text>
            <text class="post-time text-xs text-muted">{{item.formatted_time}}</text>
          </view>
        </view>
        
        <!-- 删除按钮 - 只有作者可见 -->
        <view class="post-actions" wx:if="{{isLoggedIn && userInfo.id === item.user_id}}">
          <text class="delete-btn text-danger text-sm" bindtap="deletePost" data-id="{{item.id}}" data-title="{{item.title}}">删除</text>
        </view>
      </view>
      
      <view class="post-content">
        <text class="post-title text-lg">{{item.title}}</text>
        <text class="post-preview text-sm text-secondary mt-10">{{item.content}}</text>
      </view>
      
      <view class="post-footer">
        <view class="post-stats">
          <text class="text-xs text-muted">{{item.comment_count}} 评论</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多 -->
  <view class="load-more" wx:if="{{hasMore}}">
    <text class="text-sm text-muted" wx:if="{{!loading}}">上拉加载更多</text>
    <view class="loading" wx:if="{{loading}}">
      <text class="text-sm text-muted">加载中...</text>
    </view>
  </view>

  <!-- 空状态 -->
  <view class="empty" wx:if="{{posts.length === 0 && !loading}}">
    <view class="empty-icon">📝</view>
    <text class="text-base">还没有帖子</text>
    <text class="text-sm text-muted mt-10">成为第一个发帖的人吧！</text>
    <view class="btn btn-primary mt-20" bindtap="goToPublish" wx:if="{{isLoggedIn}}">
      发布帖子
    </view>
  </view>

  <!-- 加载中 -->
  <view class="loading" wx:if="{{loading && posts.length === 0}}">
    <text class="text-sm text-muted">加载中...</text>
  </view>
</view>
