/* app.wxss - 全局样式 */

page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 24rpx;
  margin: 10rpx 0;
}

.btn-primary {
  background-color: #1AAD19;
  color: #ffffff;
}

.btn-secondary {
  background-color: #ffffff;
  color: #1AAD19;
  border: 2rpx solid #1AAD19;
}

.btn-danger {
  background-color: #ff4757;
  color: #ffffff;
}

.btn-disabled {
  background-color: #e0e0e0;
  color: #9e9e9e;
}

/* 输入框样式 */
.input {
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 24rpx;
  font-size: 32rpx;
  margin: 10rpx 0;
}

.input:focus {
  border-color: #1AAD19;
}

/* 文本样式 */
.text-primary {
  color: #1AAD19;
}

.text-secondary {
  color: #666666;
}

.text-muted {
  color: #999999;
}

.text-danger {
  color: #ff4757;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 字体大小 */
.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-base {
  font-size: 32rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }

.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }

.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }

.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

.px-10 { padding-left: 10rpx; padding-right: 10rpx; }
.px-20 { padding-left: 20rpx; padding-right: 20rpx; }

.py-10 { padding-top: 10rpx; padding-bottom: 10rpx; }
.py-20 { padding-top: 20rpx; padding-bottom: 20rpx; }

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-between {
  justify-content: space-between;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #e0e0e0;
  margin: 20rpx 0;
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1AAD19;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
}

.avatar-sm {
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #f0f0f0;
  color: #666666;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin: 4rpx;
}
